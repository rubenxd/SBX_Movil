
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical">
    <TextView
        android:text="@string/textItem"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_item" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="43.0dp"
        android:enabled="false"
        android:id="@+id/editText_Item" />
    <TextView
        android:text="@string/textNombre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Nombre" />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="43.0dp"
        android:id="@+id/editText_Nombre" />
    <TextView
        android:text="@string/textReferencia"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Referencia" />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:id="@+id/editText_Referencia" />
    <TextView
        android:text="@string/textIva"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_iva" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="43.0dp"
        android:id="@+id/editText_iva" />
    <TextView
        android:text="@string/textProveedor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_proveedor" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:prompt="@string/planet_prompt"
        />
    <TextView
        android:text="@string/textCosto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_costo" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="43.0dp"
        android:id="@+id/editText_costo" />
    <TextView
        android:text="@string/textPrecioVenta"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_PrecioVenta" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="43.0dp"
        android:id="@+id/editText_PrecioVenta" />
    <LinearLayout
        android:orientation=    "horizontal"
        android:layout_width=    "match_parent"
        android:layout_height=    "59.5dp"
        android:layout_weight=    "1">
        <Button
            android:text="@string/btnGuardar"
            android:layout_width="185.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guardar"
            android:layout_marginRight="11.0dp" />
        <Button
            android:text="@string/btnSalir"
            android:layout_width="185.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_salir"
            android:layout_marginLeft="0.0dp" />
    </LinearLayout>

</LinearLayout>