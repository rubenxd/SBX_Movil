
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical">
    <Button
        android:text="@string/btnVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Ventas" />
    <Button
        android:text="@string/btnProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_producto" />
    <Button
        android:text="@string/btnProveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_proveedor" />
    <Button
        android:text="@string/btnCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cliente" />
    <Button
        android:text="@string/btnInventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_inventario" />

</LinearLayout>